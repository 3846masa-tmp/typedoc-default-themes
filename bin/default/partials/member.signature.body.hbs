{{#unless hideSources}}
    {{> member.sources}}
{{/unless}}

{{> comment}}

{{#if parameters}}
    <h4 class="tsd-parameters-title">Parameters</h4>
    <ul class="tsd-parameters">
        {{#each parameters}}
            <li>
                <h5>{{#compact}}
                    {{name}}{{#if isOptional}}?{{/if}}:&nbsp;{{#with type}}{{>type}}{{/with}}

                    {{#each flags}}
                        &nbsp;<span class="tsd-flag ts-flag{{this}}">{{this}}</span>
                    {{/each}}
                {{/compact}}</h5>

                {{> comment}}

                {{#if type.declaration}}
                    {{#with type.declaration}}
                        {{> parameter}}
                    {{/with}}
                {{/if}}
            </li>
        {{/each}}
    </ul>
{{/if}}

{{#if type}}
    <h4 class="tsd-returns-title">Returns {{#with type}}{{>type}}{{/with}}</h4>
    {{#if comment.returns}}
        {{#markdown}}{{{comment.returns}}}{{/markdown}}
    {{/if}}
{{/if}}